{% extends "index.twig" %}

{% 
set errorCodes = {
	10: 'Contul introdus nu există!',
} 
%}

{% block title %}Contul meu{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h1 class="orange-text">
                    {% block AccountTitle %}{% endblock %}
                </h1>
                <nav>
                    <div class="nav-wrapper light-blue">
                        <div class="col s12">
                            <a href="?p=index" class="breadcrumb">Acasă</a>
                            <a href="?p=account" class="breadcrumb">Contul meu</a>
                        </div>
                    </div>
                </nav>
				<br><br>
                {% if isLogin is defined and isLogin %}
                    {% if loginError is defined %}
                        <div class="card-panel red darken-4">
                            <span class="white-text">
                                {{ errorCodes[loginError] }}
                            </span>
                        </div>
                    {% elseif LoggedIn %}
                        <div class="card-panel green lighten-1">
                            <span class="white-text">
                                Salut, {{ Session.name }}! Ai fost conectat cu succes!
                            </span>
                        </div>
                    {% endif %}
                {% endif %}
                {% if LoggedIn %}
                    <div class="center">
                        <img src="{{ avatarURL }}" alt="" class="circle responsive-img z-depth-3">
                        <h3>{{ Session.name }}</h3>
                    </div>
                    <div class="divider"></div>
                    <div class="row">
                        {% block AccountContent %}{% endblock %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}